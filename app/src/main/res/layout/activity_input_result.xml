<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".InputResultActivity">

    <TextView
        android:background="@android:color/white"
        android:id="@+id/textView"
        style="@style/IntroductionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="타이어 측정결과 입력"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ftp_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="100dp"
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1번" />

            <EditText
                android:id="@+id/num1"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/CategoricalText"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2번" />

            <EditText
                android:id="@+id/num2"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3번" />

            <EditText
                android:id="@+id/num3"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4번" />

            <EditText
                android:id="@+id/num4"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5번" />

            <EditText
                android:id="@+id/num5"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6번" />

            <EditText
                android:id="@+id/num6"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7번" />

            <EditText
                android:id="@+id/num7"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8번" />

            <EditText
                android:id="@+id/num8"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9번" />

            <EditText
                android:id="@+id/num9"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10번" />

            <EditText
                android:id="@+id/num10"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11번" />

            <EditText
                android:id="@+id/num11"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/CategoricalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12번" />

            <EditText
                android:id="@+id/num12"
                android:inputType="numberDecimal"
                style="@style/EditTextFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@+id/ftp_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        android:progress="0"/>
    <Button
        android:id="@+id/ftp_store"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:textSize="20dp"
        android:text="저장"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>