<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/textView1"
        style="@style/IntroductionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="실험정보 입력"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/textView2"
            style="@style/CategoricalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="실험일"
            app:layout_constraintBottom_toTopOf="@+id/ex_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ex_date"
            style="@style/EditTextFormat"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="datetime"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            style="@style/CategoricalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실험자"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ex_date" />

        <EditText
            android:id="@+id/experimenter"
            style="@style/EditTextFormat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="홍길동"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@id/textView4"
            style="@style/CategoricalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/experimenter" />

        <EditText
            android:id="@+id/ex_place"
            style="@style/EditTextFormat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:text="한국자동차연구원 영암지부"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textview5"
            style="@style/CategoricalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타이어 모델"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ex_place" />

        <EditText
            android:id="@+id/tire_model"
            style="@style/EditTextFormat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:text="SOLUS TA 51"
            app:layout_constraintTop_toBottomOf="@+id/textview5" />

        <TextView
            android:id="@+id/textView6"
            style="@style/CategoricalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실험회차"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tire_model" />

        <EditText
            android:id="@+id/ex_round"
            style="@style/EditTextFormat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/start_shoot"
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:layout_height="80dp"
            android:text="촬영 시작"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.constraintlayout.widget.ConstraintLayout>