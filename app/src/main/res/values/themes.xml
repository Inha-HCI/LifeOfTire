<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tire_dataset_build_app" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--colorPrimary는 App 색깔을 의미-->
        <item name="colorPrimary">#064DA2</item>
        <!--colorPrimaryVariant는 색상의 그림자-->
        <item name="colorPrimaryVariant">#0065B3</item>
        <!--colorOnPrimary는 주 색상이 적용된 요소(글자 등)에 적용되는 색상-->
<!--        <item name="colorOnPrimary">#4682b4</item>-->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#064DA2</item>
        <item name="colorSecondaryVariant">#0065B3</item>
        <item name="colorOnSecondary">#4682b4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!--    Splash      -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>